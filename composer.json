{
    "name": "sanderdlm/skeleton",
    "description": "Skeleton for a PHP project",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "twig/twig": "^3.7",
        "php-di/php-di": "^7.0",
        "nikic/fast-route": "^1.3",
        "middlewares/fast-route": "^2.0",
        "middlewares/error-handler": "^3.0",
        "middlewares/request-handler": "^2.0",
        "laminas/laminas-diactoros": "^3.3",
        "laminas/laminas-httphandlerrunner": "^2.9",
        "doctrine/dbal": "^4.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.8",
        "symfony/var-dumper": "^7.0",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev":{
        "psr-4" : {
            "App\\Test\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public/",
        "test": "phpunit",
        "cs": "phpcs",
        "fix": "phpcbf",
        "analyze": "phpstan --memory-limit=2G"
    }
}
