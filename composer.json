{
    "name": "sanderdlm/skeleton",
    "description": "Skeleton for a PHP project",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.5",
        "twig/twig": "^3.22",
        "php-di/php-di": "^7.1",
        "nikic/fast-route": "^1.3",
        "middlewares/fast-route": "^2.1",
        "middlewares/error-handler": "^3.1",
        "middlewares/request-handler": "^2.1",
        "laminas/laminas-diactoros": "^3.8",
        "laminas/laminas-httphandlerrunner": "^2.13",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "symfony/var-dumper": "^8.0",
        "phpunit/phpunit": "^12.5",
        "symfony/css-selector": "^8.0",
        "symfony/dom-crawler": "^8.0",
        "carthage-software/mago": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev":{
        "psr-4" : {
            "App\\Test\\": "tests/"
        }
    },
    "scripts": {
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:8080 -t public/"
        ],
        "test": "phpunit",
        "analyze": "vendor/bin/mago analyze",
        "lint": "vendor/bin/mago lint",
        "fix": "vendor/bin/mago lint --fix",
        "check": [
            "@test",
            "@analyze",
            "@lint"
        ]
    },
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    }
}
