{
    "name": "sanderdlm/skeleton",
    "description": "Skeleton for a PHP project",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "twig/twig": "^3.7",
        "php-di/php-di": "^7.0",
        "nikic/fast-route": "^1.3",
        "middlewares/fast-route": "^2.0",
        "middlewares/error-handler": "^3.0",
        "middlewares/request-handler": "^2.0",
        "laminas/laminas-diactoros": "^3.3",
        "laminas/laminas-httphandlerrunner": "^2.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.8",
        "symfony/var-dumper": "^7.0",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^10",
        "symfony/css-selector": "^7.0",
        "symfony/dom-crawler": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev":{
        "psr-4" : {
            "App\\Test\\": "tests/"
        }
    },
    "scripts": {
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:8080 -t public/"
        ],
        "test": "phpunit",
        "phpstan": "phpstan --memory-limit=2G",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "check": [
            "@test",
            "@phpstan",
            "@phpcs"
        ]
    }
}
